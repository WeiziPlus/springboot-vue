<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.weiziplus.common.base.BaseMapper">
    <insert id="insert">
        INSERT INTO `${TABLE_NAME}` (
        <foreach collection="COLUMNS" item="column" separator=",">
            `${column}`
        </foreach>
        ) VALUES (
        <foreach collection="VALUES" item="value" separator=",">
            #{value}
        </foreach>
        )
    </insert>
    <insert id="insertGetAutoIncrementPrimaryKey" useGeneratedKeys="true" keyProperty="KEY_ID">
        INSERT INTO `${TABLE_NAME}` (
        <foreach collection="COLUMNS" item="column" separator=",">
            `${column}`
        </foreach>
        ) VALUES (
        <foreach collection="VALUES" item="value" separator=",">
            #{value}
        </foreach>
        )
    </insert>
    <insert id="insertList">
        INSERT INTO `${TABLE_NAME}` (
        <foreach collection="COLUMNS" item="column" separator=",">
            `${column}`
        </foreach>
        ) VALUES
        <foreach collection="VALUES_LIST" item="values" separator=",">
            (
            <foreach collection="values" item="value" separator=",">
                #{value}
            </foreach>
            )
        </foreach>
    </insert>
    <delete id="deleteById">
        DELETE
        FROM `${TABLE_NAME}`
        WHERE `id` = #{id}
    </delete>
    <delete id="deleteByIds">
        DELETE
        FROM `${TABLE_NAME}`
        WHERE `id` IN (
        <foreach collection="ids" item="id" separator=",">
            #{id}
        </foreach>
        )
    </delete>
    <update id="update">
        UPDATE `${TABLE_NAME}`
        SET
        <foreach collection="COLUMNS_VALUES" item="item" separator=",">
            `${item.column}` = #{item.value}
        </foreach>
        WHERE `${KEY_ID}` = #{KEY_VALUE}
    </update>
    <select id="findById" resultType="Map">
        SELECT *
        FROM `${TABLE_NAME}`
        WHERE `id` = #{id}
    </select>
    <select id="findByIds" resultType="Map">
        SELECT *
        FROM `${TABLE_NAME}`
        WHERE `id` IN (
        <foreach collection="ids" item="id" separator=",">
            #{id}
        </foreach>
        )
    </select>
    <select id="findOneDataByColumn" resultType="Map">
        SELECT *
        FROM `${TABLE_NAME}`
        WHERE `${COLUMN}` = #{value}
        LIMIT 1
    </select>
    <select id="findOneDataByColumnMap" resultType="Map">
        SELECT *
        FROM `${TABLE_NAME}`
        <where>
            <foreach collection="COLUMN_VALUE_MAP" index="key" item="value" separator="AND">
                ${key} = #{value}
            </foreach>
        </where>
        LIMIT 1
    </select>
    <select id="findListByColumn" resultType="Map">
        SELECT *
        FROM `${TABLE_NAME}`
        WHERE `${COLUMN}` = #{value}
    </select>
    <select id="findListByColumnMap" resultType="Map">
        SELECT *
        FROM `${TABLE_NAME}`
        <where>
            <foreach collection="COLUMN_VALUE_MAP" index="key" item="value" separator="AND">
                ${key} = #{value}
            </foreach>
        </where>
    </select>
    <select id="findAll" resultType="Map">
        SELECT *
        FROM `${TABLE_NAME}`
    </select>
    <select id="findAllOrderByColumnDesc" resultType="Map">
        SELECT *
        FROM `${TABLE_NAME}`
        ORDER BY ${COLUMN} DESC
    </select>
    <select id="findAllOrderByColumnAsc" resultType="Map">
        SELECT *
        FROM `${TABLE_NAME}`
        ORDER BY ${COLUMN} ASC
    </select>
</mapper>